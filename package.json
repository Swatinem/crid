{
  "name": "crid",
  "version": "2.0.0",
  "description": "Crid - The cryptographic ID serializer",
  "main": "dist/crid.cjs.js",
  "module": "dist/crid.esm.js",
  "browser": "dist/crid.umd.js",
  "types": "dist/types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "jest": "^23.1.0",
    "jsverify": "^0.8.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.7",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sucrase": "^1.0.0",
    "source-map-support": "^0.5.6",
    "ts-jest": "^22.4.6",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "rimraf dist && tsc && rollup -c",
    "prepublishOnly": "npm run test && npm run build",
    "test": "tsc && jest"
  },
  "author": "Arpad Borsos <arpad.borsos@googlemail.com>",
  "license": "LGPL-3.0",
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": ["src/impls.ts"],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx)",
      "**/?(*.)+(spec|test).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    }
  }
}
